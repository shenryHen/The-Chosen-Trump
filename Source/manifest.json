{
	"manifest_version": 2,

	"name": "Trump to God",
    "short_name": "Hail Trump",
	"description": "Replaces the text 'Trump' with epithets.",
	"author": "Henry Shen",
	"version": "1.0",

	"icons": {
		"32": "/icons/trump2.png"
	},

	"browser_action": {
		"default_icon": "/icons/trump2.png"
	},

	"content_scripts":
	[
		{
			"matches": ["*://*/*"],
			"all_frames": true,
			"js": ["content_script.js"],
			"run_at": "document_end"
		}
	]
}